<div class="container mt-5">
  <h1>All Restaurants</h1>
  <%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary mb-3" %>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= restaurant.address %></p>
            <p class="card-text"><small class="text-muted"><%= restaurant.category.capitalize %></small></p>
            <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
